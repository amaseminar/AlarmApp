<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:drawableTop="@drawable/ic_star_black_24dp"
        android:drawablePadding="8dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="Porneste alarma"
        android:textSize="18sp" />

    <Button
        android:id="@+id/startRepeatingAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="Da drumu la ghicitori"
        android:textSize="18sp" />

    <Button
        android:id="@+id/stopRepeatingAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="Nu imi plac ghicitorile"
        android:textSize="18sp" />

</LinearLayout>